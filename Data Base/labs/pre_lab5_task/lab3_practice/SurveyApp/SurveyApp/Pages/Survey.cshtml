@page
@model SurveyModel
@{
    ViewData["Title"] = "Survey Page";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<form method="post" class="container p-4 border rounded shadow-sm bg-light">

    <div class="form-group mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required />
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Hobbies:</label><br />
        @foreach (var hobby in Model.Hobbies)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="hobbies" value="@hobby" id="@hobby">
                <label class="form-check-label" for="@hobby">
                    @hobby
                </label>
            </div>
        }
    </div>

    <div class="form-group text-center">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>

<style>
    .container {
        max-width: 600px;
    }
</style>
